# Use Node.js LTS version
FROM node:20-alpine

# Install FFmpeg
RUN apk add --no-cache ffmpeg

# Create app directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (dev + prod)
RUN npm install

# Copy source code
COPY . .

# Copy .env to container root
COPY .env .env

# Create uploads directory
RUN mkdir -p uploads

# Expose port
EXPOSE 3000

# Start NestJS in watch mode (hot reload)
CMD ["npm", "run", "start:dev"]
